FROM sd2e/python3:ubuntu16

ARG S3_ALIAS
ARG S3_URI
ARG S3_REGION
ARG S3_KEY
ARG S3_SECRET
ARG S3_SIG
ARG S3_BUCKET
ARG S3_PROTO
ARG S3_USE_HTTPS

ENV AWS_S3_PROTO=$S3_PROTO
ENV AWS_S3_URI=$S3_URI
ENV AWS_S3_REGION=$S3_REGION
ENV AWS_S3_SIG=$S3_SIG
ENV AWS_S3_KEY=$S3_KEY
ENV AWS_S3_SECRET=$S3_SECRET
ENV AWS_S3_BUCKET=$S3_BUCKET

WORKDIR /home

RUN pip install boto3

ADD test.py /home/
ADD ipsum.txt /home/

CMD python3 test.py 
